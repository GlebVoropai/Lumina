<Window x:Class="LuminaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LuminaGUI" Height="400" Width="600"
        AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Border Background="#121212" Opacity="0.9" CornerRadius="5" BorderThickness="0" Padding="5">
        <Grid>
            <!-- Верхняя панель -->
            <DockPanel Background="Transparent" Height="20" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="LuminaGUI" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="–" Width="30" Height="20" Click="Minimize_Click" Background="Transparent" Foreground="White" BorderBrush="Transparent"/>
                    <Button Content="x" Width="30" Height="20" Click="Close_Click" Background="Transparent" Foreground="White" BorderBrush="Transparent"/>
                </StackPanel>
            </DockPanel>

            <TabControl Margin="10,30,10,10" Background="Transparent" BorderBrush="Transparent">
                <TabControl.Resources>
                    <!-- Стиль для TabItem -->
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Bd"
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1,1,1,0"
                        Padding="5">
                                        <TextBlock x:Name="HeaderText"
                               Text="{TemplateBinding Header}"
                               HorizontalAlignment="Center"
                               Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#1E1E1E"/>
                                            <Setter TargetName="HeaderText" Property="Foreground" Value="#1DE9B6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <!-- Static Mode Tab -->
                <TabItem Header="Static Mode">
                    <Grid Background="#1E1E1E">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10">
                            <TextBlock Text="Hue" Foreground="White"/>
                            <Slider x:Name="HueSlider" Minimum="0" Maximum="360" ValueChanged="HSLSlider_ValueChanged"/>

                            <TextBlock Text="Saturation" Foreground="White" Margin="0,10,0,0"/>
                            <Slider x:Name="SaturationSlider" Minimum="0" Maximum="100" ValueChanged="HSLSlider_ValueChanged"/>

                            <TextBlock Text="Lightness" Foreground="White" Margin="0,10,0,0"/>
                            <Slider x:Name="LightnessSlider" Minimum="0" Maximum="100" ValueChanged="HSLSlider_ValueChanged"/>
                        </StackPanel>

                        <!-- Цветовое превью -->
                        <Border x:Name="ColorPreview" Background="Black" Grid.Column="1" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </TabItem>

                <!-- Ambilight Mode Tab -->
                <TabItem Header="Ambilight Mode">
                    <Grid Background="#1E1E1E">
                        <StackPanel Margin="10">
                            <TextBlock Text="Smoothness" Foreground="White"/>
                            <Slider x:Name="SmoothnessSlider" Minimum="0" Maximum="100"/>

                            <TextBlock Text="Brightness" Margin="0,10,0,0" Foreground="White"/>
                            <Slider x:Name="AmbilightBrightnessSlider" Minimum="0" Maximum="100"/>

                            <TextBlock Text="Saturation" Margin="0,10,0,0" Foreground="White"/>
                            <Slider x:Name="AmbilightSaturationSlider" Minimum="0" Maximum="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>
    </Border>
</Window>
